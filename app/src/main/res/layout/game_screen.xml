<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#333">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="12dp"
        card_view:cardUseCompatPadding="true"
        android:padding="12dp"
        android:layout_gravity="center"
        android:backgroundTint="#444"
        android:elevation="8dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="3"
            android:rowCount="3"
            android:padding="8dp">

            <Button
                android:id="@+id/btn_0"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="#666"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="18sp"
                android:contentDescription="Cell 0" />

            <Button
                android:id="@+id/btn_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="#666"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="18sp"
                android:contentDescription="Cell 1" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="#666"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="18sp"
                android:contentDescription="Cell 2" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="#666"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="18sp"
                android:contentDescription="Cell 3" />

            <Button
                android:id="@+id/btn_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="#666"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="18sp"
                android:contentDescription="Cell 4" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="#666"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="18sp"
                android:contentDescription="Cell 5" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="#666"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="18sp"
                android:contentDescription="Cell 6" />

            <Button
                android:id="@+id/btn_7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="#666"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="18sp"
                android:contentDescription="Cell 7" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="#666"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="18sp"
                android:contentDescription="Cell 8" />

        </GridLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
